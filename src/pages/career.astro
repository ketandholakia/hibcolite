---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Careers | HibcoLite">
  <div class="max-w-3xl mx-auto text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">Join Our Team</h1>
    <p class="text-lg text-gray-600 mb-10">
      At HibcoLite, we are always looking for talented individuals to help us grow.
    </p>

    <div class="bg-gray-50 p-8 rounded-lg border border-gray-200 text-left">
      <h3 class="text-xl font-bold mb-2">Current Openings</h3>
      <p class="text-gray-600 mb-4">There are currently no open positions listed online.</p>
      <p class="text-gray-700">
        However, we encourage you to send your resume to our HR department for future consideration.
      </p>
      <div class="mt-6">
        <a href="mailto:hr@hibcolite.com" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition">
          Email Your Resume
        </a>
      </div>
    </div>
  </div>
</MainLayout>