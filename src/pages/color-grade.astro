---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Color Grades | HibcoLite">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">Color Grades</h1>
    <p class="text-lg text-gray-700 mb-8">
      We offer moulding powders in a wide variety of colors to suit specific aesthetic and functional requirements.
    </p>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="text-center">
        <div class="w-full h-24 bg-black rounded shadow-md mb-2"></div>
        <span class="font-medium">Jet Black</span>
      </div>
      <div class="text-center">
        <div class="w-full h-24 bg-red-800 rounded shadow-md mb-2"></div>
        <span class="font-medium">Brown / Red</span>
      </div>
      <div class="text-center">
        <div class="w-full h-24 bg-green-900 rounded shadow-md mb-2"></div>
        <span class="font-medium">Forest Green</span>
      </div>
      <div class="text-center">
        <div class="w-full h-24 bg-blue-900 rounded shadow-md mb-2"></div>
        <span class="font-medium">Navy Blue</span>
      </div>
    </div>
    
    <p class="mt-8 text-sm text-gray-500">
      * Custom colors are available upon request for bulk orders.
    </p>
  </div>
</MainLayout>