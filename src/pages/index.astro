---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import HeroSlider from '../components/HeroSlider.astro';
---

<MainLayout title="Home Page">
  
  <div slot="before-main">
     <HeroSlider />
  </div>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <!-- Who We Are -->
      <div class="relative bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 mb-16 border border-gray-100">
        <div class="grid md:grid-cols-2">
          <div class="relative h-64 md:h-auto group overflow-hidden">
            <img src="/img/banner01.jpg" alt="Hindustan Backlite Products" class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
            <div class="absolute inset-0 bg-gradient-to-r from-blue-900/10 to-transparent"></div>
          </div>
          <div class="p-8 md:p-12 flex flex-col justify-center">
            <span class="text-blue-600 font-bold tracking-wider uppercase text-sm mb-2">About Us</span>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">WHO WE ARE</h2>
            <p class="text-lg text-gray-700 leading-relaxed mb-4">
              Hindustan Backlite Company is a premier manufacturer and exporter of high-quality thermosetting Moulding Powders and Resins under the renowned brand 'Hibcolite'.
            </p>
            <p class="text-gray-600 leading-relaxed">
              With a legacy of innovation and excellence, we serve diverse industries globally. We are recognized as a trusted enterprise specializing in a wide spectrum of thermosetting compounds and Phenol Formaldehyde Resins.
            </p>
          </div>
        </div>
      </div>

      <!-- Vision & Mission -->
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <div class="bg-gray-50 p-8 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
          <h3 class="text-2xl font-bold text-blue-900 mb-4">Our Vision</h3>
          <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?auto=format&fit=crop&w=600&q=80" alt="Our Vision" class="w-full h-48 object-cover rounded-lg mb-6 shadow-sm" />
          <p class="text-gray-700 leading-relaxed">
            To be respected as an ethical, sustainable leader and recognized as a 21st-century technology powerhouse in thermoset compounds.
          </p>
        </div>
        <div class="bg-gray-50 p-8 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
          <h3 class="text-2xl font-bold text-blue-900 mb-4">Our Mission</h3>
          <img src="https://images.unsplash.com/photo-1533750349088-cd871a92f312?auto=format&fit=crop&w=600&q=80" alt="Our Mission" class="w-full h-48 object-cover rounded-lg mb-6 shadow-sm" />
          <p class="text-gray-700 leading-relaxed">
            To serve as a one-stop solution for P.F. Moulding Powder across all industrial sectors, delivering superior quality products that ensure total customer satisfaction.
          </p>
        </div>
        <div class="bg-gray-50 p-8 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
          <h3 class="text-2xl font-bold text-blue-900 mb-4">Our Values</h3>
          <img src="https://images.unsplash.com/photo-1521737604893-d14cc237f11d?auto=format&fit=crop&w=600&q=80" alt="Our Values" class="w-full h-48 object-cover rounded-lg mb-6 shadow-sm" />
          <p class="text-gray-700 leading-relaxed">
            Driven by integrity and innovation, we prioritize sustainable practices and customer success, fostering a culture of excellence in every product we manufacture.
          </p>
        </div>
      </div>

      <!-- Why Choose Us -->
      <div class="bg-blue-900 text-white rounded-2xl p-8 md:p-12 shadow-xl">
        <h3 class="text-2xl md:text-3xl font-bold mb-8 text-center">Why Choose Hibcolite?</h3>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {[
            "Premium Quality P.F. Moulding Powder in Vibrant Colors",
            "Comprehensive Technical Support & Services",
            "Reliable & Stable Product Supply Chain",
            "Prompt & Efficient Delivery",
            "Dedicated Team of Experts"
          ].map((item) => (
            <div class="flex items-start space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-300 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-blue-50 font-medium">{item}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

</MainLayout>	